<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RAITA"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:textColor="@color/lightblack"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MITRA"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#54B435"
            android:textSize="20sp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:src="@drawable/face" />

        <ImageView
            android:id="@+id/helpline"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/helpline"
            android:layout_marginStart="20dp"
       />
        <ImageView
            android:id="@+id/notification"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/on_notification"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>

   <LinearLayout
       android:id="@+id/services"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <com.denzcoskun.imageslider.ImageSlider
           android:id="@+id/image_slider"
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:layout_marginTop="10dp"
           app:iss_auto_cycle="true"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           app:iss_delay="2000"
           app:iss_period="2000"
           app:iss_corner_radius="20"
           app:iss_text_align="CENTER" />
   </LinearLayout>

    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center">
           <LinearLayout
               android:id="@+id/schemes"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:padding="10dp"
               android:background="@drawable/image_background"
               android:orientation="vertical">

               <me.virtualiz.blurshadowimageview.BlurShadowImageView
                   android:layout_marginTop="10dp"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:layout_gravity="center"
                   android:scaleType="centerCrop"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:v_imageRound="20dp"
                   app:v_imageSrc="@drawable/schemes"
                   app:v_shadowOffset="40dp" />
               <!-- Add your views here -->

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Schemes"
                   android:layout_gravity="center"
                   android:textColor="@color/lightblack"
                   android:textSize="20sp"
                   android:layout_marginBottom="10dp"
                   android:textStyle="bold"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="5dp"
               android:layout_height="match_parent"
               android:background="@color/white"/>
           <LinearLayout
               android:id="@+id/equipments"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:padding="10dp"
               android:background="@drawable/image_background"
               android:orientation="vertical">

               <me.virtualiz.blurshadowimageview.BlurShadowImageView

                   android:layout_marginTop="10dp"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:layout_gravity="center"
                   android:scaleType="centerCrop"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:v_imageRound="20dp"
                   app:v_imageSrc="@drawable/equipments"
                   app:v_shadowOffset="40dp" />
               <!-- Add your views here -->

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Equipments"
                   android:layout_gravity="center"
                   android:textColor="@color/lightblack"
                   android:textSize="20sp"
                   android:layout_marginBottom="10dp"
                   android:textStyle="bold"/>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:orientation="horizontal"
           android:gravity="center">
           <LinearLayout
               android:id="@+id/labourRequirements"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:padding="10dp"
               android:background="@drawable/image_background"
               android:orientation="vertical">

               <me.virtualiz.blurshadowimageview.BlurShadowImageView

                   android:layout_marginTop="10dp"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:layout_gravity="center"
                   android:scaleType="centerCrop"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:v_imageRound="20dp"
                   app:v_imageSrc="@drawable/labour"
                   app:v_shadowOffset="40dp" />
               <!-- Add your views here -->

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Labourers"
                   android:layout_gravity="center"
                   android:textColor="@color/lightblack"
                   android:textSize="20sp"
                   android:textStyle="bold"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Requirements"
                   android:layout_gravity="center"
                   android:textColor="@color/lightblack"
                   android:textSize="20sp"
                   android:textStyle="bold"
                   android:layout_marginBottom="10dp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="5dp"
               android:layout_height="match_parent"
               android:background="@color/white"/>
           <LinearLayout
               android:id="@+id/procedure"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:padding="10dp"
               android:background="@drawable/image_background"
               android:orientation="vertical">

               <!-- Add your views here -->

               <me.virtualiz.blurshadowimageview.BlurShadowImageView

                   android:layout_marginTop="10dp"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:layout_gravity="center"
                   android:scaleType="centerCrop"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:v_imageRound="20dp"
                   app:v_imageSrc="@drawable/applying"
                   app:v_shadowOffset="40dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Procedure"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textColor="@color/lightblack"
                   android:textSize="20sp"
                   android:textStyle="bold"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="and Guidelines"
                   android:layout_gravity="center"
                   android:textColor="@color/lightblack"
                   android:textSize="20sp"
                   android:layout_marginBottom="10dp"
                   android:textStyle="bold"/>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:orientation="horizontal"
           android:layout_marginBottom="25dp"
           android:gravity="center">
           <LinearLayout
               android:id="@+id/connect"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:padding="10dp"
               android:background="@drawable/image_background"
               android:orientation="vertical">

               <!-- Add your views here -->

               <me.virtualiz.blurshadowimageview.BlurShadowImageView

                   android:layout_marginTop="10dp"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:layout_gravity="center"
                   android:scaleType="centerCrop"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:v_imageRound="20dp"
                   app:v_imageSrc="@drawable/connect"
                   app:v_shadowOffset="40dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Contact"
                   android:layout_gravity="center"
                   android:textColor="@color/lightblack"
                   android:textSize="20sp"
                   android:layout_marginBottom="10dp"
                   android:textStyle="bold"/>

           </LinearLayout>
           <LinearLayout
               android:layout_width="5dp"
               android:layout_height="match_parent"
               android:background="@color/white"/>
           <LinearLayout
               android:id="@+id/share"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:padding="10dp"
               android:background="@drawable/image_background"
               android:orientation="vertical">

               <me.virtualiz.blurshadowimageview.BlurShadowImageView

                   android:layout_marginTop="10dp"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:layout_gravity="center"
                   android:scaleType="centerCrop"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:v_imageRound="20dp"
                   app:v_imageSrc="@drawable/share"
                   app:v_shadowOffset="40dp" />
               <!-- Add your views here -->

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Share"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textColor="@color/lightblack"
                   android:textSize="20sp"
                   android:layout_marginBottom="10dp"
                   android:textStyle="bold"/>

           </LinearLayout>
       </LinearLayout>
   </LinearLayout>

    </ScrollView>




</LinearLayout>