<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/aquablue"
    tools:context=".authentication.SignInOption">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginHorizontal="10dp"
        android:text="Welcome back to Jal Nidhi!"
        android:textColor="#5AA6E3"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textStyle="bold"

        />


<ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:src="@drawable/signin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:id="@+id/userSelectionBtn"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/account_type"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:outlineAmbientShadowColor="@color/black">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/userText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="User"
                android:textColor="@color/black"
                android:textSize="20sp"

                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/adminSelectionBtn"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/account_type"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/adminImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/admin" />

            <TextView
                android:id="@+id/adminText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Admin"
                android:textColor="@color/black"
                android:textSize="20sp"

                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


       <Button
           android:id="@+id/nextBtn"
           android:layout_width="120dp"
           android:layout_height="50dp"
           android:text="Next"
           android:layout_marginTop="30dp"
           android:layout_marginBottom="10dp"
           android:layout_gravity="center"
           android:textStyle="bold"
           android:textColor="@color/white"
           android:visibility="invisible"
           android:backgroundTint="@color/blue"/>


</LinearLayout>